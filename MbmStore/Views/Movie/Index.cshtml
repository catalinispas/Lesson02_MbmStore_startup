@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@{
    ViewData["Title"] = "Movies";
}

<h2>Index</h2>

<a asp-controller="Home" asp-action="Index">Home</a>

<table>
    <tr>
        <td>
            <p><img src="/Images/JungleBook.jpg" alt="@ViewBag.JungleBook.Title" /></p>
        </td>
        <td>
            <h2>@ViewBag.JungleBook.Title</h2>
            <p>@ViewBag.JungleBook.Director</p>
            <p>Price: @String.Format("{0:0.00}", ViewBag.JungleBook.Price)</p>
        </td>
    </tr>
    <tr>
        <td>
            <p><img src="/Images/forrest-gump.jpg" alt="@ViewBag.ForrestGump.Title"</p>
        </td>
        <td>
            <h2>@ViewBag.ForrestGump.Title</h2>
            <p>@ViewBag.ForrestGump.Director</p>
            <p>Price: @String.Format("{0:0.00}", ViewBag.ForrestGump.Price)</p>
        </td>
    </tr>
    <tr>
        <td>
            <p><img src="/Images/gladiator.jpg" alt="@ViewBag.Gladiator.Title"</p>
        </td>
        <td>
            <h2>@ViewBag.Gladiator.Title</h2>
            <p>@ViewBag.Gladiator.Director</p>
            <p>Price: @String.Format("{0:0.00}", ViewBag.Gladiator.Price)</p>
        </td>
    </tr>
</table>